  </div>  <script>
    /* ---------- Sample Content Data ---------- */
    const ARTICLES = [
      {id:'article-1',title:'PN Conducts Maritime Patrols in West Philippine Sea',date:'September 10, 2025',category:'PN Operations',excerpt:'Philippine Navy ships completed routine maritime patrols, reaffirming sovereignty and commitment to national waters.',body:'<p>The Philippine Navy conducted scheduled patrols to uphold maritime law...</p><p><strong>Facts:</strong> Patrols were routine, coordinated with local authorities.</p>'},
      {id:'article-2',title:'Countering Disinformation: Facts on Naval Operations',date:'September 8, 2025',category:'Fact Check',excerpt:'Official PN statement clarifies false claims circulating online regarding fleet movements and readiness.',body:'<p>There have been circulating reports online that misrepresent PN operations...</p>'},
      {id:'article-3',title:'Community Outreach in Palawan',date:'September 5, 2025',category:'Community Stories',excerpt:'PN personnel engage local communities through medical missions and information awareness campaigns.',body:'<p>Community engagement is central to our approach...</p>'}
    ];

    const INFOGRAPHICS = [
      {id:'inf-1',title:'Maritime Facts: Boundaries Explained',img:'https://via.placeholder.com/600x360?text=Infographic+1'},
      {id:'inf-2',title:'#MaritimeFacts: Verify Before You Share',img:'https://via.placeholder.com/600x360?text=Infographic+2'},
      {id:'inf-3',title:'How to Report Suspicious Activity',img:'https://via.placeholder.com/600x360?text=Infographic+3'}
    ];

    const PODCASTS = [
      {id:'pod-1',title:'Episode 1: Maritime Awareness 101',src:''},
      {id:'pod-2',title:'Episode 2: The Role of Communities',src:''}
    ];

    const VIDEOS = [
      {id:'vid-1',title:'Reel: PN Patrol Highlights',yt:'https://www.youtube.com/embed/dQw4w9WgXcQ'},
      {id:'vid-2',title:'Reel: How to Verify Claims',yt:'https://www.youtube.com/embed/dQw4w9WgXcQ'},
      {id:'vid-3',title:'Reel: Community Dialogues',yt:'https://www.youtube.com/embed/dQw4w9WgXcQ'}
    ];

    /* ---------- Navigation / Rendering ---------- */
    function hideAll(){document.querySelectorAll('main, section').forEach(n=>n.classList.add('hidden'))}
    function navigate(page,id){hideAll(); if(page==='home'){document.getElementById('home').classList.remove('hidden');window.scrollTo(0,0)}
      else if(page==='articles'){document.getElementById('articles').classList.remove('hidden');renderArticleList();window.scrollTo(0,0)}
      else if(page==='infographics'){document.getElementById('infographics').classList.remove('hidden');renderInfographics();window.scrollTo(0,0)}
      else if(page==='podcasts'){document.getElementById('podcasts').classList.remove('hidden');renderPodcasts();window.scrollTo(0,0)}
      else if(page==='videos'){document.getElementById('videos').classList.remove('hidden');renderVideos();window.scrollTo(0,0)}
      else if(page==='dashboard'){document.getElementById('dashboard').classList.remove('hidden');window.scrollTo(0,0)}
      else if(page==='about'){document.getElementById('about').classList.remove('hidden');window.scrollTo(0,0)}
      if(id) renderArticle(id);
    }

    /* Article list */
    function renderArticleList(){const el=document.getElementById('article-list');el.innerHTML='';ARTICLES.forEach(a=>{const card=document.createElement('div');card.className='card';card.innerHTML=`<h4 class="article-title">${a.title}</h4><div class="meta">${a.date} • ${a.category}</div><p class="small">${a.excerpt}</p><p><button class="btn" onclick="navigate('articles','${a.id}')">Read</button></p>`;el.appendChild(card)})}
    function renderArticle(id){document.getElementById('article-view').classList.remove('hidden');const a=ARTICLES.find(x=>x.id===id);const view=document.getElementById('article-view');view.innerHTML=`<h3 class=\"article-title\">${a.title}</h3><div class=\"meta\">${a.date} • ${a.category}</div>${a.body}<p class=\"small\">Source: Philippine Navy Communications</p><p><button class=\"btn\" onclick=\"navigate('articles')\">Back to Articles</button></p>`}

    /* Infographics */
    function renderInfographics(){const el=document.getElementById('infographic-list');el.innerHTML='';INFOGRAPHICS.forEach(i=>{const card=document.createElement('div');card.className='card';card.innerHTML=`<img src="${i.img}" class="infographic"><h4 style=\"margin-top:8px;color:var(--pn-blue)\">${i.title}</h4><p class=\"small\">Download and share to help verify claims.</p><p><button class=\"btn\" onclick=\"alert('Download placeholder for ${i.id}')\">Download</button></p>`;el.appendChild(card)})}

    /* Podcasts */
    function renderPodcasts(){const el=document.getElementById('podcast-list');el.innerHTML='';PODCASTS.forEach(p=>{const box=document.createElement('div');box.className='card';box.innerHTML=`<div class=\"audio-ep\"><div><strong>${p.title}</strong><div class=\"small\">PN Podcast Series</div></div><audio controls style=\"width:100%;margin-top:8px\"><source src=\"\" type=\"audio/mpeg\">Your browser doesn't support audio.</audio></div>`;el.appendChild(box)})}

    /* Videos */
    function renderVideos(){const el=document.getElementById('video-list');el.innerHTML='';VIDEOS.forEach(v=>{const card=document.createElement('div');card.className='card';card.innerHTML=`<iframe width=\"100%\" height=\"160\" src=\"${v.yt}\" title=\"${v.title}\" frameborder=\"0\" allow=\"accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture\" allowfullscreen></iframe><h4 style=\"margin-top:8px;color:var(--pn-blue)\">${v.title}</h4>`;el.appendChild(card)})}

    /* ---------- Dashboard (charts + console) ---------- */
    let engChart,sentChart,infChart;
    function initDashboard(){
      const engagementCtx = document.getElementById('engagementChart').getContext('2d');
      engChart = new Chart(engagementCtx, {type:'line',data:{labels:['T-7','T-6','T-5','T-4','T-3','T-2','T-1','Now'],datasets:[{label:'Engagements',data:[120,190,300,500,200,300,450,600],borderColor:'#FFD700',backgroundColor:'rgba(255,215,0,0.2)',tension:0.3,fill:true}]},options:{responsive:true,plugins:{legend:{display:false}}}});

      const sentimentCtx = document.getElementById('sentimentChart').getContext('2d');
      sentChart = new Chart(sentimentCtx, {type:'doughnut',data:{labels:['Positive','Neutral','Negative'],datasets:[{data:[65,25,10],backgroundColor:['#16a34a','#facc15','#dc2626']}]},options:{responsive:true,plugins:{legend:{position:'bottom'}}}});

      const influencerCtx = document.getElementById('influencerChart').getContext('2d');
      infChart = new Chart(influencerCtx, {type:'bar',data:{labels:['@NavalWatch','@SeaGuardian','@PHMaritime','@FleetVoice','@OceanShield'],datasets:[{label:'Reach (k)',data:[80,65,60,55,40],backgroundColor:'#002147'}]},options:{responsive:true,plugins:{legend:{display:false}}}});

      // alerts
      const alerts=document.getElementById('alerts');alerts.innerHTML='';
      const sample=['⚠️ Viral misinfo flagged','📢 Counter post hit 50k','🚨 Bot network detected','✅ Community report validated'];
      sample.forEach(s=>{const li=document.createElement('li');li.textContent=s;alerts.appendChild(li)});

      // console log
      document.getElementById('console-log').innerHTML='';
    }

    function login(){const u=document.getElementById('login-user').value;const p=document.getElementById('login-pass').value;if(u==='operator' && p==='password'){document.getElementById('dashboard-panel').classList.remove('hidden');initDashboard();addDashboardLog('🔐 Operator logged in');}else{alert('Invalid credentials (use operator/password for demo)')}}

    function addDashboardLog(msg){const el=document.getElementById('console-log');const li=document.createElement('li');li.textContent=new Date().toLocaleTimeString()+ ' — ' + msg;el.prepend(li)}

    function sendPost(){const txt=document.getElementById('console-input').value;if(!txt){alert('Type a message first');return;}addDashboardLog('📣 Post sent: '+txt);document.getElementById('console-input').value='';// simulate engagement bump
      engChart.data.datasets[0].data.push(Math.floor(Math.random()*200)+100);engChart.data.labels.push('Now');engChart.update();}
    function triggerCounter(){addDashboardLog('🚨 Counter-narrative triggered.'); // tweak sentiment
      sentChart.data.datasets[0].data=[Math.max(70, sentChart.data.datasets[0].data[0]+5), Math.max(20, sentChart.data.datasets[0].data[1]-3), Math.max(5, sentChart.data.datasets[0].data[2]-2)];sentChart.update();}

    function navigateToHomeOnLoad(){navigate('home');}
    // init
    document.addEventListener('DOMContentLoaded',()=>{navigateToHomeOnLoad();});
  </script></body>
</html>
